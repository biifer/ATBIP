<h1>Listing gateways</h1>

<% if @gateways.length != 0 %>
  <table>
   <tr>
     <th>Name</th>
     <th>Gateway</th>
     <th></th>
     <th></th>
     <th></th>
    </tr>

  <% @gateways.each do |gateway| %>
    <tr>
      <td><%= gateway.name %></td>
      <td><%= gateway.gateway_id %></td>
      <td><%= link_to 'Show', gateway %></td>
      <td><%= link_to 'Edit', edit_gateway_path(gateway) %></td>
      <td><%= link_to 'Destroy', gateway, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />
  <%= link_to 'New Gateway', new_gateway_path %>

<% else %>
<p> Found no gateways, add a <%= link_to 'new Gateway', new_gateway_path %></p>
<% end %>

